<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/lblResultUI"
        android:textSize="20sp"
        android:text="Clicks count ="
        android:textAllCaps="false"
        android:layout_width    = "match_parent"
        android:layout_height   = "wrap_content"/>

    <Button
        android:id="@+id/btnIncrementClickUI"
        android:text="Increment"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_reset_UI"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txt_message_ui"
        android:text="message"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_goSecondActivity_ui"
        android:text="Go to second one"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
       android:id="@+id/btn_goActivityTwo_ui"
       android:text="Go Activity 2"
       android:textAllCaps="false"
       android:textSize="20sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_goActivityThree_ui"
        android:text="Go Activity 3"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

